<?xml version="1.0"?>
<odoo>
    <data>
        <record id="discount_form" model="ir.ui.view">
            <field name="name">Discount Form</field>
            <field name="model">account.invoice.discount</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="discounting_invoice_id"/>
                            </group>
                            <group>
                                <field name="initial_amount"/>
                                <field name="remaining_amount"/>
                            </group>
                        </group>
                        <field name="discount_line_ids"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="discount_list" model="ir.ui.view">
            <field name="name">Discount List</field>
            <field name="model">account.invoice.discount</field>
            <field name="arch" type="xml">
                <tree decoration-info="state=='open'" decoration-muted="state=='applied'">
                    <field name="discounting_invoice_id"/>
                    <field name="initial_amount"/>
                    <field name="remaining_amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="discount_line_form" model="ir.ui.view">
            <field name="name">Discount Line Form</field>
            <field name="model">account.invoice.discount.line</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                            <h3 attrs="{'invisible': [('discounted_invoice_id', '!=', False)]}">
                                First, choose the discounted invoice
                            </h3>
                            <h3 attrs="{'invisible': ['|',('discounted_invoice_id', '=', False), ('discounted_invoice_line_id', '!=', False)]}">
                                Then, choose the discounted invoice line
                            </h3>
                            <h3 attrs="{'invisible': [('discounted_invoice_line_id', '=', False)]}">
                                Last, choose the discounted amount
                            </h3>

                        <group>
                            <field name="discounted_invoice_id"/>
                            <field name="discounted_invoice_line_id"
                                   attrs="{'invisible': [('discounted_invoice_id', '=', False)]}"/>
                            <field name="amount"
                                   attrs="{'invisible': [('discounted_invoice_line_id', '=', False)]}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="discount_line_list" model="ir.ui.view">
            <field name="name">Discount Line List</field>
            <field name="model">account.invoice.discount.line</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="discounted_invoice_id"/>
                    <field name="discounted_invoice_line_id"/>
                    <field name="amount"/>
                </tree>
            </field>
        </record>

        <act_window
            id="discount_action"
            name="Discount"
            res_model="account.invoice.discount"
            view_mode="tree,form"/>
        <menuitem
            id="discount_menu"
            name="Discount"
            parent="account.menu_finance_entries_accounting_entries"
            action="discount_action"/>
    </data>
</odoo>