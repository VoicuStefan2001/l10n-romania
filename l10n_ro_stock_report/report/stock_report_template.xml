<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_storage_sheet">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="l10n_ro_stock_report.report_storage_sheet_report_base" />
            </t>
        </t>
    </template>
    <template id="report_storage_sheet_report_base">
        <t t-foreach="o.get_found_products()" t-as="product">
            <t t-call="web.external_layout">
                <link href="/l10n_ro_stock_report/static/src/css/report.css" rel="stylesheet" />
                <t t-raw="0" />
                <div class="page">
                    <div class="row">
                        <t t-set="title">
                            Stock Sheet -
                            <t t-raw="product.name" />
                        </t>
                        <h4 class="mt0" t-esc="title" style="text-align: center;" />
                    </div>
                    <t t-call="l10n_ro_stock_report.report_storage_sheet_report_filters" />
                    <div class="act_as_table data_table mt4" style="width: 100%;">
                        <t
                            t-set="initial"
                            t-value="o.line_product_ids.filtered(lambda l: l.product_id == product and l.reference =='INITIALA')"
                        />
                        <t
                            t-set="final"
                            t-value="o.line_product_ids.filtered(lambda l: l.product_id == product and l.reference =='FINALA')"
                        />
                        <t t-call="l10n_ro_stock_report.report_storage_sheet_lines_header" />
                        <!-- Display initial lines -->
                        <div class="act_as_row lines">
                            <div class="act_as_cell" />
                            <div class="act_as_cell sold">INITIAL</div>
                            <div class="act_as_cell" />
                            <div class="act_as_cell" />
                            <div class="act_as_cell sold">
                                <div style="font-style: italic; font-weight: bold; padding: 5px 7px">
                                    <span t-field="initial.quantity_initial" />
                                </div>
                            </div>
                            <div class="act_as_cell sold">
                                <div style="font-style: italic; font-weight: bold; padding: 5px 7px">
                                    <span t-field="initial.amount_initial" />
                                </div>
                            </div>
                        </div>
                        <t
                            t-foreach="o.line_product_ids.filtered(lambda l: l.product_id == product and l.reference not in ['INITIALA','FINALA'] )"
                            t-as="line_product"
                        >
                            <t t-call="l10n_ro_stock_report.report_storage_sheet_lines" />
                        </t>
                        <!-- Display header line-->
                        <div class="act_as_row lines">
                            <div class="act_as_cell" />
                            <div class="act_as_cell">FINAL</div>
                            <div class="act_as_cell" />
                            <div class="act_as_cell" />
                            <div class="act_as_cell">
                                <div style="font-style: italic; font-weight: bold; padding: 5px 7px">
                                    <span t-field="final.quantity_final" />
                                </div>
                            </div>
                            <div class="act_as_cell sold">
                                <div style="font-style: italic; font-weight: bold; padding: 5px 7px">
                                    <span t-field="final.amount_final" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <p style="page-break-before:always;" />
                </div>
            </t>
        </t>
    </template>
    <template id="report_storage_sheet_lines">
        <div class="act_as_row lines" style="line-height:0.5">
            <div class="act_as_cell left">
                <span t-field="line_product.date" t-options='{"widget": "date"}' />
            </div>
            <div class="act_as_cell left">
                <span t-esc="line_product.reference" />
            </div>
            <div class="act_as_cell right">
                <span t-field="line_product.quantity_in" t-options='{"widget": "float", "precision": 2}' />
            </div>
            <div class="act_as_cell right">
                <span t-field="line_product.amount_in" t-options='{"widget": "float", "precision": 2}' />
            </div>
            <div class="act_as_cell right">
                <span t-field="line_product.quantity_out" t-options='{"widget": "float", "precision": 2}' />
            </div>
            <div class="act_as_cell right">
                <span t-field="line_product.amount_out" t-options='{"widget": "float", "precision": 2}' />
            </div>
            <div class="act_as_cell right">
                <span t-esc="quantity" t-options='{"widget": "float", "precision": 2}' />
            </div>
            <div class="act_as_cell right">
                <span t-esc="amount" t-options='{"widget": "float", "precision": 2}' />
            </div>
        </div>
    </template>
    <template id="report_storage_sheet_lines_header">
        <div class="act_as_thead">
            <div class="act_as_row labels">
                <div class="act_as_cell">Data</div>
                <div class="act_as_cell">Reference</div>
                <div class="act_as_cell">Quantity Input</div>
                <div class="act_as_cell">Amount Input</div>
                <div class="act_as_cell">Quantity Output</div>
                <div class="act_as_cell">Amount Output</div>
                <div class="act_as_cell">Quantity Total</div>
                <div class="act_as_cell">Amount Total</div>
            </div>
        </div>
    </template>
    <template id="report_storage_sheet_report_filters">
        <div class="act_as_table data_table" style="width: 100%;">
            <div class="act_as_row labels">
                <div class="act_as_cell">Date From</div>
                <div class="act_as_cell">Date To</div>
                <div class="act_as_cell">Location</div>
            </div>
            <div class="act_as_row">
                <div class="act_as_cell">
                    <span t-field="o.date_from" />
                </div>
                <div class="act_as_cell">
                    <span t-field="o.date_to" />
                </div>
                <div class="act_as_cell">
                    <span t-field="o.location_id" />
                </div>
            </div>
        </div>
    </template>
    <template id="report_storage_sheet_all">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="l10n_ro_stock_report.report_storage_sheet_report_all_base" />
            </t>
        </t>
    </template>
    <template id="report_storage_sheet_ref">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="l10n_ro_stock_report.report_storage_sheet_report_ref_base" />
            </t>
        </t>
    </template>
    <template id="report_storage_sheet_report_all_base">
        <t t-call="web.external_layout">
            <div class="page">
                <h2>Stock Sheet</h2>
                <div id="informations" class="row mt32 mb32">
                    <div class="col-auto col-3 mw-100 mb-2">
                        <strong>Location</strong>
                        <p>
                            <span t-field="o.location_id" />
                        </p>
                    </div>
                    <div class="col-auto col-3 mw-100 mb-2">
                        <strong>Date From</strong>
                        <p>
                            <span t-field="o.date_from" />
                        </p>
                    </div>
                    <div class="col-auto col-3 mw-100 mb-2">
                        <strong>Date To</strong>
                        <p>
                            <span t-field="o.date_to" />
                        </p>
                    </div>
                </div>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>
                                <strong>Data</strong>
                            </th>
                            <th>
                                <strong>Reference</strong>
                            </th>
                            <th class="text-right">
                                <strong>Quantity Input</strong>
                            </th>
                            <th class="text-right">
                                <strong>Amount Input</strong>
                            </th>
                            <th class="text-right">
                                <strong>Quantity Output</strong>
                            </th>
                            <th class="text-right">
                                <strong>Amount Output</strong>
                            </th>
                            <th class="text-right">
                                <strong>Quantity Total</strong>
                            </th>
                            <th class="text-right">
                                <strong>Amount Total</strong>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="product" t-value="False" />
                        <t t-foreach="o.line_product_ids" t-as="line_product">
                            <t t-if="product!=line_product.product_id">
                                <tr>
                                    <td colspan="8">
                                        <strong t-field="line_product.product_id" />
                                    </td>
                                    <t t-set="product" t-value="line_product.product_id" />
                                    <t t-set="quantity" t-value="line_product.quantity_final" />
                                    <t t-set="amount" t-value="line_product.quantity_final" />
                                </tr>
                            </t>
                            <t
                                t-set="quantity"
                                t-value="quantity+line_product.quantity_initial+line_product.quantity_in-line_product.quantity_out"
                            />
                            <t
                                t-set="amount"
                                t-value="amount+line_product.amount_initial+line_product.amount_in-line_product.amount_out"
                            />
                            <tr>
                                <td>
                                    <span t-field="line_product.date" t-options='{"widget": "date"}' />
                                </td>
                                <td>
                                    <span t-esc="line_product.reference" />
                                </td>
                                <td class="text-right">
                                    <span t-field="line_product.quantity_in" />
                                </td>
                                <td class="text-right">
                                    <span t-field="line_product.amount_in" />
                                </td>
                                <td class="text-right">
                                    <span t-field="line_product.quantity_out" />
                                </td>
                                <td class="text-right">
                                    <span t-field="line_product.amount_out" />
                                </td>
                                <td class="text-right">
                                    <span t-esc="quantity" t-options='{"widget": "float", "precision": 2}' />
                                </td>
                                <td class="text-right">
                                    <span t-esc="amount" t-options='{"widget": "float", "precision": 2}' />
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
    <template id="report_storage_sheet_report_ref_base">
        <t t-call="web.external_layout">
            <div class="page">
                <h2>Stock Sheet</h2>
                <div id="informations" class="row mt32 mb32">
                    <div class="col-auto col-3 mw-100 mb-2">
                        <strong>Location</strong>
                        <p>
                            <span t-field="o.location_id" />
                        </p>
                    </div>
                    <div class="col-auto col-3 mw-100 mb-2">
                        <strong>Date From</strong>
                        <p>
                            <span t-field="o.date_from" />
                        </p>
                    </div>
                    <div class="col-auto col-3 mw-100 mb-2">
                        <strong>Date To</strong>
                        <p>
                            <span t-field="o.date_to" />
                        </p>
                    </div>
                </div>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>
                                <strong>Data</strong>
                            </th>
                            <th>
                                <strong>Reference</strong>
                            </th>
                            <th>
                                <strong>Partner</strong>
                            </th>
                            <th class="text-right">
                                <strong>Amount Input</strong>
                            </th>
                            <th class="text-right">
                                <strong>Amount Output</strong>
                            </th>
                            <th class="text-right">
                                <strong>Amount Total</strong>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="line_products" t-value="o.get_lines_by_ref()" />
                        <t t-set="account" t-value="False" />
                        <t t-set="valued_type" t-value="False" />
                        <t t-set="last_line" t-value="False" />
                        <t t-set="total_value" t-value="0" />
                        <t t-foreach="line_products" t-as="line_product">
                            <t t-if="line_product.valued_type!=valued_type">
                                <t t-if="valued_type">
                                    <tr>
                                        <td colspan="11">
                                            <strong>
                                                Total
                                                <span t-esc="valued_type" />
                                                :
                                                <span t-esc="round(total_value,2)" />
                                            </strong>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="11">
                                            <hr />
                                        </td>
                                    </tr>
                                    <t t-set="total_value" t-value="0" />
                                </t>
                            </t>
                            <t t-if="line_product.account_id!=account">
                                <tr>
                                    <td colspan="99">
                                        <strong t-field="line_product.account_id" />
                                    </td>
                                </tr>
                                <t t-set="account" t-value="line_product.account_id" />
                            </t>
                            <t t-if="line_product.valued_type!=valued_type">
                                <tr>
                                    <td colspan="99">
                                        <strong t-field="line_product.valued_type" />
                                        :
                                    </td>
                                </tr>
                                <t t-set="valued_type" t-value="line_product.valued_type" />
                                <t t-set="last_line" t-value="line_product" />
                            </t>
                            <tr>
                                <td>
                                    <span t-field="line_product.date" t-options='{"widget": "date"}' />
                                </td>
                                <td>
                                    <t t-if="line_product.invoice_id">
                                        <span t-field="line_product.invoice_id" />
                                    </t>
                                    <t t-else="">
                                        <span t-field="line_product.reference" />
                                    </t>
                                </td>
                                <td>
                                    <span t-field="line_product.partner_id" />
                                </td>
                                <td class="text-right">
                                    <span
                                        t-field="line_product.amount_in"
                                        t-options='{"widget": "float", "precision": 2}'
                                    />
                                </td>
                                <td class="text-right">
                                    <span
                                        t-field="line_product.amount_out"
                                        t-options='{"widget": "float", "precision": 2}'
                                    />
                                </td>
                                <td class="text-right">
                                    <span
                                        t-field="line_product.amount"
                                        t-options='{"widget": "float", "precision": 2}'
                                    />
                                </td>
                                <t t-set="total_value" t-value="total_value+line_product.amount" />
                            </tr>
                        </t>
                        <tr t-if="last_line">
                            <td colspan="11">
                                <strong>
                                    Total
                                    <span t-field="last_line.valued_type" />
                                    :
                                    <span t-esc="total_value" />
                                </strong>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <!-- table for totals only -->
                <h2 style="page-break-before: always;">Stock Sheet</h2>
                <h2>Total</h2>
                <div id="informations" class="row mt32 mb32">
                    <div class="col-auto col-3 mw-100 mb-2">
                        <strong>Location</strong>
                        <p>
                            <span t-field="o.location_id" />
                        </p>
                    </div>
                    <div class="col-auto col-3 mw-100 mb-2">
                        <strong>Date From</strong>
                        <p>
                            <span t-field="o.date_from" />
                        </p>
                    </div>
                    <div class="col-auto col-3 mw-100 mb-2">
                        <strong>Date To</strong>
                        <p>
                            <span t-field="o.date_to" />
                        </p>
                    </div>
                </div>
                <table class="table table-sm">
                    <tbody>
                        <t t-set="line_products" t-value="o.get_lines_by_ref()" />
                        <t t-set="account" t-value="False" />
                        <t t-set="valued_type" t-value="False" />
                        <t t-set="last_line" t-value="False" />
                        <t t-set="total_value" t-value="0" />
                        <t t-set="total_value_account" t-value="0" />
                        <t t-foreach="line_products" t-as="line_product">
                            <t t-if="line_product.valued_type!=valued_type">
                                <t t-if="valued_type">
                                    <tr>
                                        <td colspan="11">
                                            <strong>
                                                Total
                                                <span t-esc="valued_type" />
                                                :
                                                <span t-esc="round(total_value,2)" />
                                            </strong>
                                        </td>
                                    </tr>
                                    <t t-set="total_value" t-value="0" />
                                </t>
                            </t>
                            <t t-if="line_product.account_id!=account">
                                <t t-if="account">
                                    <tr>
                                        <td colspan="11">
                                            <strong>
                                                Total
                                                <span t-field="account.display_name" />
                                                :
                                                <span t-esc="round(total_value_account,2)" />
                                            </strong>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="11">
                                            <hr />
                                        </td>
                                    </tr>
                                    <t t-set="total_value_account" t-value="0" />
                                </t>
                            </t>
                            <t t-if="line_product.account_id!=account">
                                <tr>
                                    <td colspan="99">
                                        <strong t-field="line_product.account_id" />
                                    </td>
                                </tr>
                                <t t-set="account" t-value="line_product.account_id" />
                            </t>
                            <t t-if="line_product.valued_type!=valued_type">
                                <t t-set="valued_type" t-value="line_product.valued_type" />
                                <t t-set="last_line" t-value="line_product" />
                            </t>
                            <t t-set="total_value" t-value="total_value+line_product.amount" />
                            <t t-set="total_value_account" t-value="total_value_account+line_product.amount" />
                        </t>
                        <tr t-if="last_line">
                            <td colspan="11">
                                <strong>
                                    Total
                                    <span t-field="last_line.valued_type" />
                                    :
                                    <span t-esc="total_value" />
                                </strong>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="11">
                                <t t-if="account">
                                    <strong>
                                        Total
                                        <span t-field="account.display_name" />
                                        :
                                        <span t-esc="round(total_value_account,2)" />
                                    </strong>
                                </t>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
    <record id="action_report_storage_sheet" model="ir.actions.report">
        <field name="name">Stock Sheet</field>
        <field name="model">stock.storage.sheet</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_ro_stock_report.report_storage_sheet</field>
        <field name="report_file">l10n_ro_stock_report.report_storage_sheet</field>
        <field name="print_report_name">(object._get_report_base_filename())</field>
    </record>
    <record id="action_report_storage_sheet_all" model="ir.actions.report">
        <field name="name">Stock Sheet by Product</field>
        <field name="model">stock.storage.sheet</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_ro_stock_report.report_storage_sheet_all</field>
        <field name="report_file">l10n_ro_stock_report.report_storage_sheet_all</field>
        <field name="print_report_name">(object._get_report_base_filename())</field>
    </record>
    <record id="action_report_storage_sheet_ref" model="ir.actions.report">
        <field name="name">Stock Sheet by Ref</field>
        <field name="model">stock.storage.sheet</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_ro_stock_report.report_storage_sheet_ref</field>
        <field name="report_file">l10n_ro_stock_report.report_storage_sheet_ref</field>
        <field name="print_report_name">(object._get_report_base_filename())</field>
    </record>
</odoo>
