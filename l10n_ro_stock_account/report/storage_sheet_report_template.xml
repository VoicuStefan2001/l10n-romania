<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <report
                id="action_report_storage_sheet_report"
                string="Daily stock report"
                model='l10n_ro.storage_sheet_report'
                report_type="qweb-pdf"
                file="l10n_ro_stock_account.document_storage_sheet_report"
                name="l10n_ro_stock_account.document_storage_sheet_report"
        />


        <template id="document_storage_sheet_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                        <t t-call="base.report_address_company"/>
                        <div class="page">
                            <h1>Storage Sheet</h1>
                            <h3>
                                <span>From Date:</span>
                                <span t-field="o.date_from" t-options='{"widget": "date"}'/>
                                <t t-if="o.date_from != o.date_to">
                                    <span>To date</span>
                                    <span t-field="o.date_to"/>
                                </t>
                            </h3>
                            <h3>
                                <span>Product:</span>
                                <span t-field="o.product_id"/>
                            </h3>
                            <h3>
                                <span>Location:</span>
                                <span t-field="o.location_id"/>
                            </h3>


                            <table class="table table-condensed table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            <strong>Type</strong>
                                        </th>

                                        <th class="text-right">
                                            <strong>Quantity</strong>
                                        </th>
                                        <th class="text-right">
                                            <strong>Amount</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <t t-set="total" t-value="0.0"/>
                                <tbody>

                                    <tr t-foreach="o.line_product_ids" t-as="line">
                                        <t t-set="total" t-value="total + line.amount"/>
                                        <td>
                                            <span t-field="line.type"/>
                                        </td>

                                        <td class="text-right">
                                            <span t-field="line.quantity"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.amount"/>
                                        </td>
                                    </tr>
                                </tbody>

                            </table>
                            <div class="row">
                                <div class="col-xs-4 pull-right">
                                    <table class="table table-condensed">

                                        <tr class="border-black">
                                            <td>
                                                <strong>Total</strong>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="total"
                                                      t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </t>
                </t>
            </t>
        </template>


    </data>
</odoo>