<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="l10n_ro_invoice_form_view" model="ir.ui.view">
            <field name="name">l10n_ro.account.invoice.form</field>
            <field name="model">account.move</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <field name="currency_id" position="after">
                    <field name="delegate_id" />
                    <field name="mean_transp" />
                </field>
            </field>
        </record>
        <record id="action_invoice_set_origin_with_picking" model="ir.actions.server">
            <field name="name">Set Origin</field>
            <field name="model_id" ref="model_account_move" />
            <field name="state">code</field>
            <field name="code">records.set_origin_with_picking()</field>
        </record>
        <record id="account.menu_action_account_payments_receivable" model="ir.ui.menu">
            <field name="name">Incoming payments</field>
        </record>
        <record id="account.action_account_payments_payable" model="ir.actions.act_window">
            <field name="name">Payments</field>
        </record>
        <record id="account.action_account_payments" model="ir.actions.act_window">
            <field name="name">Incoming payments</field>
        </record>
    </data>
</odoo>
