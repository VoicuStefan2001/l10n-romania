<?xml version="1.0" ?>
<odoo>
    <data>

        <record id="l10n_ro_invoice_form_view" model="ir.ui.view">
            <field name="name">l10n_ro.account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">

                <field name="price_unit" position="before">
                    <field name="price_unit_without_taxes" groups="account.group_show_line_subtotals_tax_included"/>
                </field>

               <field name="reference" position="after">

                      <field name="delegate_id"  />
                      <field name="mean_transp" />

               </field>
            </field>
        </record>

    </data>
</odoo>
