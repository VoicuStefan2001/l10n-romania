<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.account</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="41"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='module_currency_rate_live']" position="replace">
                    <field name="module_currency_rate_update"/>
                </xpath>

                <xpath expr="//div[hasclass('settings')]" position="inside">

                    <div class="app_settings_block" data-string="Romania" string="Romania" data-key="l10n_ro_config"
                         groups="account.group_account_manager">

                        <h2>Accounting</h2>

                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box"
                                 attrs="{'invisible': [('group_multi_currency', '=', False)]}">
                                <div class="o_setting_left_pane">
                                    <field name="module_currency_rate_update"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Automatic Currency Rates"/>
                                    <div class="text-muted" id="module_currency_rate_update">
                                        Update exchange rates automatically
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="module_l10n_ro_partner_create_by_vat"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Create partner by VAT"/>
                                </div>
                            </div>

                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="anglo_saxon_accounting"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="anglo_saxon_accounting"/>
                                </div>
                            </div>


                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="module_l10n_ro_invoice_report"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="module_l10n_ro_invoice_report"/>
                                </div>
                            </div>

                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">

                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label for="property_customer_advance_account_id"
                                                   class="col-md-5 o_light_label"/>
                                            <field name="property_customer_advance_account_id" placeholder="Select 419"/>
                                        </div>
                                        <div class="row mt16">
                                            <label for="property_supplier_advance_account_id"
                                                   class="col-md-5 o_light_label"/>
                                            <field name="property_supplier_advance_account_id" placeholder="Select 4091"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <h2>Stock Accounting</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="module_l10n_ro_stock"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="module_l10n_ro_stock"/>
                                    <div class="content-group"
                                         attrs="{'invisible': [('module_l10n_ro_stock', '=', False)]}">
                                        <div class="row mt16">
                                            <label for="property_stock_picking_receivable_account_id"
                                                   class="col-md-5 o_light_label"/>
                                            <field name="property_stock_picking_receivable_account_id"
                                                   placeholder="Select 418"/>
                                        </div>
                                        <div class="row mt16">
                                            <label for="property_stock_picking_payable_account_id"
                                                   class="col-md-5 o_light_label"/>
                                            <field name="property_stock_picking_payable_account_id" placeholder="Select 408"/>
                                        </div>
                                        <div class="row mt16">
                                            <label for="property_stock_usage_giving_account_id"
                                                   class="col-md-5 o_light_label"/>
                                            <field name="property_stock_usage_giving_account_id" placeholder="Select 8035"/>
                                        </div>
                                        <div class="row mt16">
                                            <label for="property_stock_picking_custody_account_id"
                                                   class="col-md-5 o_light_label"/>
                                            <field name="property_stock_picking_custody_account_id" placeholder=""/>
                                        </div>
                                        <div class="row mt16">
                                            <label for="property_stock_transfer_account_id"
                                                   class="col-md-5 o_light_label"/>
                                            <field name="property_stock_transfer_account_id" placeholder="Select 482"/>
                                        </div>
                                    </div>
                                </div>


                            </div>

                            <div class="col-xs-12 col-md-6 o_setting_box"  >
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">

                                    <div class="text-muted">

                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                             <div class="row mt16">
                                                <label for="property_trade_discount_received_account_id"
                                                       class="col-md-5 o_light_label"/>
                                                <field name="property_trade_discount_received_account_id" placeholder="Select 609"/>
                                            </div>
                                            <div class="row mt16">
                                                <label for="property_trade_discount_granted_account_id"
                                                       class="col-md-5 o_light_label"/>
                                                <field name="property_trade_discount_granted_account_id" placeholder="Select 709"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

<!--
                        <h2>Trade discounts</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane">

                                </div>
                                <div class="o_setting_right_pane">

                                    <div class="content-group" >

                                        <div class="row mt16">
                                            <label for="property_trade_discount_received_account_id"
                                                   class="col-lg-3 o_light_label"/>
                                            <field name="property_trade_discount_received_account_id" placeholder="Select 609"/>
                                        </div>
                                        <div class="row mt16">
                                            <label for="property_trade_discount_granted_account_id"
                                                   class="col-lg-3 o_light_label"/>
                                            <field name="property_trade_discount_granted_account_id" placeholder="Select 709"/>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                -->
                    </div>

                </xpath>

            </field>
        </record>


    </data>
</odoo>
