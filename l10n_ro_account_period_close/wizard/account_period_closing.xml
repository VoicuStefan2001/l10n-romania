<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		
		<record id="view_account_period_closing_wizard" model="ir.ui.view">
            <field name="name">account.period.closing.wizard</field>
            <field name="model">account.period.closing.wizard</field>
            <field name="arch" type="xml">
                <form string="Account Period Closing Wizard">
                    <group col="2" colspan="4">
                        <field name="closing_id"/>
                        <field name="company_id" invisible="1"/>					
                    </group>
 
                    <group>
						<field name="date_move" colspan="2"/>
						<field name="period_id" domain="[('company_id','=',company_id)]" colspan="2"/>
						<field name="journal_id" domain="[('company_id','=',company_id)]" colspan="4"/>
	                    <field name="done" readonly="1"/>
					</group>
                    <footer>
                   		<button name="do_close" string="Close" attrs="{'invisible':[('done', '=' ,True)]}" type="object" icon="gtk-ok"  class="oe_highlight"/>
						or
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
 
 
                </form>
            </field>
        </record>
        
                   
		<record id="action_view_closings" model="ir.actions.act_window">
            <field name="name">Closings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.period.closing.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_account_period_closing_wizard"/>
            <field name="context">{'closing_id' : active_id, 'default_closing_id': active_id}</field>
            <field name="target">new</field>
       </record>

		<act_window id="action_account_period_closing_wizard" name="Closings"
			res_model="account.period.closing.wizard" src_model="account.period.closing"
			view_mode="form" target="new" 
			key2="client_action_multi"  multi="True"
			context="{'closing_id' : active_id, 'default_closing_id': active_id}"/>
  
          <record id="view_account_period_close" model="ir.ui.view">
            <field name="name">account.period.close.form</field>
            <field name="model">account.period.close</field>
            <field name="inherit_id" ref="account.view_account_period_close"/>
            <field name="arch" type="xml">
            	<field name="sure" position="after">
            		<field name="date_move"/>
					<field name="journal_id"/>
            	</field>
            </field>
        </record>
  
    
	</data>
</openerp>
